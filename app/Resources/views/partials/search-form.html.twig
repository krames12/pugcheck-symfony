<section class="search-container search">
    <form id="search-form" method="POST">
        <label for="character">Character Name</label>
        <input type="text" name="character" id="character-name" />
        <label for="server">Server Name</label>
        <input type="text" name="server" id="server-name" />
        <label for="region">Region</label>
        <select name="region" id="region-name">
            <option value="us">US</option>
            <option value="eu">EU</option>
        </select>
        <input type="submit" value="Find Character" name="find-character" id="find-character-button" />
    </form>
</section>